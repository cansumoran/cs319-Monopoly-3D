<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane fx:id="jokerSquareEdit" prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: rgb(182, 216, 184); -fx-font: 'Source Sans Pro'; -fx-font-family: 'Source Sans Pro'; -fx-font-size: 25;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <header>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 30;" text="Joker Square" />
        </header>
        <content>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                <children>
                    <HBox prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 25;" text="Name:" />
                            <TextField style="-fx-font-size: 15; -fx-background-color: rgb(203, 227, 199); -fx-border-color: BLACK;" />
                        </children>
                    </HBox>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 25;" text="Movement:" />
                    <RadioButton mnemonicParsing="false" style="-fx-font-size: 25;" text="Move ... squares">
                        <toggleGroup>
                            <ToggleGroup fx:id="movementGroup" />
                        </toggleGroup></RadioButton>
                    <RadioButton mnemonicParsing="false" style="-fx-font-size: 25;" text="Wait ... turns" toggleGroup="$movementGroup" />
                    <RadioButton mnemonicParsing="false" style="-fx-font-size: 25;" text="No movement" toggleGroup="$movementGroup" />
                    <HBox prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 25;" text="Amount:" />
                            <TextField style="-fx-font-size: 15; -fx-background-color: rgb(203, 227, 199); -fx-border-color: BLACK;" />
                        </children>
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 25;" text="Money:" />
                            <TextField style="-fx-font-size: 15; -fx-background-color: rgb(203, 227, 199); -fx-border-color: BLACK;" />
                        </children>
                    </HBox>
                </children></VBox>
        </content>
        <buttonTypes>
            <ButtonType fx:constant="OK" />
            <ButtonType fx:constant="CANCEL" />
        </buttonTypes>
    </DialogPane>
